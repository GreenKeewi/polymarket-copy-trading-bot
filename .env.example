# ══════════════════════════════════════════════════════════
#  Polymarket Copy Trading Bot - Configuration
# ══════════════════════════════════════════════════════════

# ─────────────────────────────────────────────────────────
# CRITICAL: Test Mode
# ─────────────────────────────────────────────────────────
# ALWAYS start with TEST_MODE=true to validate everything
# before risking real money
TEST_MODE=true

# ─────────────────────────────────────────────────────────
# Database Configuration
# ─────────────────────────────────────────────────────────
# MongoDB connection (optional in test mode - uses in-memory)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=polymarket_copy_bot

# ─────────────────────────────────────────────────────────
# Wallet Configuration (LIVE MODE ONLY)
# ─────────────────────────────────────────────────────────
# Your Polygon wallet private key
# ⚠️  NEVER commit this to version control
# ⚠️  ONLY set when TEST_MODE=false
WALLET_PRIVATE_KEY=

# ─────────────────────────────────────────────────────────
# Tracked Traders
# ─────────────────────────────────────────────────────────
# Polygon addresses of traders to copy (comma-separated)
TRACKED_TRADERS=0x1234567890123456789012345678901234567890

# ─────────────────────────────────────────────────────────
# Position Sizing (CHOOSE ONE METHOD)
# ─────────────────────────────────────────────────────────

# Method 1: Capital-Proportional (RECOMMENDED)
# Set estimated capital/account size for each trader
# Bot will match the same % of capital the trader uses
# Example: Trader uses 10% of $10k = $1k
#          You use 10% of $2k = $200
TRADER_CAPITAL_AMOUNTS=10000

# Method 2: Multiplier-Based (Legacy)
# Simple multiplier of trader's position size
# Example: Trader buys 100 shares, you buy 100 × 0.5 = 50 shares
# POSITION_MULTIPLIERS=1.0

# ─────────────────────────────────────────────────────────
# Risk Management
# ─────────────────────────────────────────────────────────
# Maximum single position value (USD)
MAX_POSITION_SIZE_USD=1000

# Maximum total exposure across all positions (USD)
MAX_TOTAL_EXPOSURE_USD=5000

# Maximum allowed slippage (0.02 = 2%)
DEFAULT_SLIPPAGE_TOLERANCE=0.02

# Minimum trade size to execute (USD)
MIN_TRADE_SIZE_USD=10

# Enable/disable protection features
ENABLE_SLIPPAGE_PROTECTION=true
ENABLE_EXPOSURE_LIMITS=true

# ─────────────────────────────────────────────────────────
# Test Mode Settings
# ─────────────────────────────────────────────────────────
# Initial mock wallet balance for testing
MOCK_WALLET_INITIAL_BALANCE=1000

# Price volatility in simulator (0.02 = 2%)
PRICE_SIMULATOR_VOLATILITY=0.02

# Use deterministic seed for reproducible tests
ENABLE_DETERMINISTIC_SEED=true
DETERMINISTIC_SEED=42

# ─────────────────────────────────────────────────────────
# Advanced Settings
# ─────────────────────────────────────────────────────────
# Trade aggregation window (milliseconds)
AGGREGATION_WINDOW_MS=5000
